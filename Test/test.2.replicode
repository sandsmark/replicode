[]; tpl
   (ptn tgv1:(tagged_v v: :) |[])
   (ptn tgv2:(tagged_v ::) |[])
|[]; input
[]; productions
   (inj []
      g:(grp
      1; upr
      0.4; sln_thr
      0.2; act_thr
      0; vis_thr
      1; c_sln
      0; c_sln_thr
      1; c_act
      0; c_act_thr
      0; dcy_per
      0; dcy_tgt
      1; dcy_prd
      0; dcy_auto
      1; sln_chg_thr
      1; sln_chg_prd
      1; act_chg_thr
      1; act_chg_prd
      0; avg_sln
      0; high_sln
      0; low_sln
      0; avg_act
      0; high_act
      0; low_act
      1; high_sln_thr
      0; low_sln_thr
      1; sln_ntf_prd
      1; high_act_thr
      0; low_act_thr
      1; act_ntf_prd
